              "layouthint": ["combobox"],
              "enumerated": true,
              "options": [
                {
                  "code": "Home",
                  "label": "Home"
                },
                {
                  "code": "Work",
                  "label": "Work"
                },
                {
                  "code": "Other",
                  "label": "Other"
